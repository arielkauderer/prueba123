<h1>Courses#index</h1>
<%= notice %>

<table align='center'>
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Category</th>
            <th colspan='3'></th>
        </tr>
    </thead>
    <tbody>
        <% Course.all.each do |course| %>
            <tr>
                <td><%= course.name %></td>
                <td><%= course.description %></td>
                <td><%= course.category %></td>
                <td><%= link_to 'Ver detalles', courses_show_path(:id => course.id) %></td>
            </tr>
        <% end %>
    </tbody>
</table>

