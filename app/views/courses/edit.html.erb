<%= form_with(model: @course, method: :patch, url: courses_update_path(:id => @course.id)) do |form| %>

    <div>
        <%= form.label :Name %>
        <%= form.text_field :name %>
    </div>


    <div>
        <%= form.label :Description %>
        <%= form.text_field :description %>
    </div>


    <div>
        <%= form.label :Category %>
        <%= form.text_field :category %>
    </div>

    <div>
        <%= form.submit 'Editar curso' %>
    </div>

<% end %>
